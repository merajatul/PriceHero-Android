<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/register"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewforfemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping for Female"
        android:textStyle="bold"
        android:textSize="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.077"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/camera"
        android:layout_marginStart="59dp" />


    <ImageView
        android:id="@+id/perse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/perse"
        android:layout_below="@+id/textViewforfemale"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="26dp" />

    <ImageView
        android:id="@+id/shari"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/shari"
        android:layout_alignTop="@+id/perse"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/shari2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/shari2"
        android:layout_alignTop="@+id/shari"
        android:layout_toEndOf="@+id/textViewforfemale" />

    <ImageView
        android:id="@+id/kurti"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/kurti"
        android:layout_below="@+id/perse"
        android:layout_alignStart="@+id/perse"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/threepcs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/threepcs"
        android:layout_alignTop="@+id/kurti"
        android:layout_alignStart="@+id/shari" />


    <ImageView
        android:id="@+id/frak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/frak"
        android:layout_alignTop="@+id/threepcs"
        android:layout_alignStart="@+id/shari2" />

    <ImageView
        android:id="@+id/kurtii"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/kurtii"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/kurti"
        android:layout_alignStart="@+id/kurti" />


    <ImageView
        android:id="@+id/perse2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/perse2"
        android:layout_alignTop="@+id/kurtii"
        android:layout_alignStart="@+id/threepcs" />

    <ImageView
        android:id="@+id/juta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/juta"
        android:layout_alignTop="@+id/perse2"
        android:layout_alignStart="@+id/frak" />

</RelativeLayout>