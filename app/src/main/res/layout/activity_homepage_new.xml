<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    tools:context="com.lubnasweety.pricehero.Homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/HomepageContent">

        <include
            layout="@layout/layout_action_bar"
            android:id="@+id/homepageActionBar" />

        <TextView
            android:id="@+id/ornamentsTitle"
            android:text="Ornaments Items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#120c0c"
            android:textStyle="bold"
            />

        <GridView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:columnCount="3"
            android:padding="10dp"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="1dp"
            android:id="@+id/ornamentsproducts">

        </GridView>
        <TextView
            android:id="@+id/groceryTitle"
            android:text="Grocery Items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#120c0c"
            android:textStyle="bold"
            />
        <GridView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:columnCount="3"
            android:padding="10dp"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="1dp"
            android:id="@+id/groceryproducts">

        </GridView>

        <TextView
            android:id="@+id/electronicsTitle"
            android:text="Electronics Items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#120c0c"
            android:textStyle="bold"
            />
        <GridView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:columnCount="3"
            android:padding="10dp"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="1dp"
            android:id="@+id/electronicsproducts">

        </GridView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/homeNav"
        android:layout_gravity="start"
        app:menu="@menu/activity_side_bar_drawer">

    </android.support.design.widget.NavigationView>




</android.support.v4.widget.DrawerLayout>
