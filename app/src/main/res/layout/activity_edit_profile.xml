<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E9E9E"
    tools:context="com.lubnasweety.pricehero.EditProfile">

    <TextView
        android:background="#FFFFFF"
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="85dp"
        android:hint="username"
        android:textColor="#0e0202"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />
    <TextView
        android:background="#FFFFFF"
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:hint="location"
        android:textColor="#0e0202"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="74dp"
        android:layout_below="@+id/shopname"
        android:layout_alignStart="@+id/shopname"
        android:layout_marginTop="16dp" />

    <TextView
        android:background="#FFFFFF"
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="Old Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:background="#FFFFFF"
        android:id="@+id/pass1"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="31dp"
        android:textAlignment="center"
        android:hint="New Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:background="#FFFFFF"
        android:id="@+id/shopname"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:hint="Shop Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        android:layout_below="@+id/pass1"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="31dp" />

    <TextView
        android:background="#FFFFFF"
        android:layout_width="200dp"
        android:layout_height="31dp"
        android:hint="Shop Type"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/pass1"
        android:layout_marginTop="31dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:backgroundTint="#454A64"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp" />
</RelativeLayout>
