<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/register"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/camera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/camera"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="86dp" />
    <TextView
        android:id="@+id/textViewelectronics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electronics Products"
        android:textStyle="bold"
        android:textSize="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.077"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/camera"
        android:layout_marginStart="59dp" />
    <ImageView
        android:id="@+id/laptop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/laptop"
        android:layout_alignTop="@+id/camera"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/phone"
        android:layout_alignTop="@+id/laptop"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/tv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/tv"
        android:layout_below="@+id/camera"
        android:layout_alignStart="@+id/camera"
        android:layout_marginTop="36dp" />

    <ImageView
        android:id="@+id/fan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/fan"
        android:layout_alignTop="@+id/tv"
        android:layout_alignStart="@+id/laptop" />

    <ImageView
        android:id="@+id/freez"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/freez"
        android:layout_alignTop="@+id/fan"
        android:layout_alignStart="@+id/phone" />

    <ImageView
        android:id="@+id/mouse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/mouse"
        android:layout_below="@+id/tv"
        android:layout_alignStart="@+id/tv"
        android:layout_marginTop="53dp" />

    <ImageView
        android:id="@+id/cable"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/cable"
        android:layout_alignTop="@+id/mouse"
        android:layout_alignStart="@+id/fan" />

    <ImageView
        android:id="@+id/keyboard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/keyboard"
        android:layout_alignTop="@+id/cable"
        android:layout_alignStart="@+id/freez" />

</RelativeLayout>